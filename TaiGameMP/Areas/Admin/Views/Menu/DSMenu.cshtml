@model List<Model.EF.Menu>
@{
    ViewBag.Title = "DSMenu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách Menu</h2>
<table cellpadding="3">
    <thead>
        <tr>
            <td>Tên menu</td>
            <td>Đường dẫn</td>
            <td>Target</td>
            <td>Đa cấp</td>
            <td>Menu con</td>
            <td>Tùy chọn</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Text</td>
                <td>@item.Link</td>
                <td>@item.Target</td>
                <td>@item.Multilevel</td>
                <td>@item.Submenu</td>
                <td>
                    <a href="/Admin/DSMenu/Edit/@item.ID">Sửa</a> |
                    @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
          {
              Confirm = "Bạn có muốn xóa menu này?",
              OnComplete = "$('#row_" + @item.ID + "').remove()",
              HttpMethod = "Delete"
          })
            </tr>
        }
    </tbody>
</table>




