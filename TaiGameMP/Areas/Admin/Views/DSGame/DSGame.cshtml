
@{
    ViewBag.Title = "DSGame";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Model.EF.Game>
<h2>Danh sách Game</h2>
<table cellpadding="3">
    <thead>
        <tr>
            <td>ID</td>
            <td>Tên game</td>
            <td>Hình ảnh</td>
            <td>Tùy chọn</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr id="row_@item.ID">
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>
                    <img src="@item.Image", width="100px" height="60px" />
                </td>
                <td>
                    <a href="/Admin/DSGame/Edit/@item.ID">Sửa</a> |
                    @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                       {
                           Confirm = "Bạn có muốn xóa game này?",
                           OnComplete = "$('#row_" + @item.ID + "').remove()",
                           HttpMethod = "Delete"
                       })
            </tr>
        }
   </tbody>
</table>
