@model Model.EF.KhachHang
@{
    ViewBag.Title = "ThongTinUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var listThongtin = (List<Model.EF.KhachHang>)ViewBag.ListKhachHang;
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                <h2 class="mb-4">Thông tin cá nhân</h2>
            </div>
        </div>
        <div class="row">
            <form class="form-horizontal">
                <div class="form-group row">
                    <label class="col-sm-6 col-form-label">Tên đăng nhập: @Model.Username</label>                   
                </div>
                <div class="form-group row">
                    <label class="col-sm-6 col-form-label">Họ và tên: @Model.Displayname</label>                  
                </div>
                <div class="form-group row">
                    <label class="col-sm-6 col-form-label">Giới tính: @Model.Gender</label>
                </div>
                <div class="form-group row">
                    <label class="col-sm-6 col-form-label">Địa chỉ: @Model.Address</label>
                </div>
                <div class="form-group row">
                    <label class="col-sm-6 col-form-label">Điện thoại: @Model.Phone</label>
                </div>
                <div class="form-group row">
                    <label class="col-sm-6 col-form-label">Ngày sinh: @Model.Ngaysinh</label>
                </div>
            </form>
        </div>
    </div>
</section>